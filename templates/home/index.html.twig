{% extends 'base.html.twig' %}

{% block title %}VaPeuR-iSH{% endblock %}

{% block body %}

    <div class="container">
        <div class="d-flex justify-content-between">
            <h1 class="mt-3 mb-4">Les jeux les plus joués</h1>
            <button class="btn btn-primary h-50 my-auto">
                Voir tout
            </button>
        </div>
        <div class="row">
            {% for gameIteration in mostPlayedGames %}
                <div class="col-lg-4 col-md-6">
                    {% include 'partials/_games.html.twig' with {
                        'game': gameIteration
                    } %}
                </div>
            {% endfor %}
        </div>


        <div class="d-flex justify-content-between">
            <h1 class="mt-3 mb-4">Les dernières sorties</h1>
            <button class="btn btn-primary h-50 my-auto">
                Voir tout
            </button>
        </div>
        <div class="row">
            {% for gameIteration in lastPublished %}
                <div class="col-lg-3 col-md-6">
                    {% include 'partials/_games.html.twig' with {
                        'game': gameIteration,
                        'lowHeight': 1
                    } %}
                </div>
            {% endfor %}
        </div>
    </div>

    <h1 class="mt-3 mb-4">Les derniers commentaires</h1>
    <div class="row">
        {% for comment in lastComments %}
            <div class="col-lg-3 col-md-6">
                {{ comment.account.name }}
                {{ comment.game.name }}
            </div>
        {% endfor %}
    </div>

    <div class="container">
        <div class="d-flex justify-content-between">
            <h1 class="mt-3 mb-4">Les dernières sorties</h1>
            <button class="btn btn-primary h-50 my-auto">
                Voir tout
            </button>
        </div>
        <div class="row">
            {% for gameIteration in mostSellers %}
                <div class="col-lg-4 col-md-6">
                    {% include 'partials/_games.html.twig' with {
                        'game': gameIteration,
                    } %}
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="container">
        <h1 class="mt-3 mb-4">Les genres</h1>
        <div class="row">
            {% for genre in genres %}
                <div class="col-lg-4 col-md-6 mt-5 mb-5">
                    <div class="cardGenre">
                        <a href="{{ path('app_game_index') }}">
                            <div class="cardGenrePicture">
                                <img class="logo" src="{{ asset('build/img/genre.jpg') }}">
                                <div class="cardGenreDescription d-flex">
                                    <p class="m-auto">{{ genre.name }}</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
