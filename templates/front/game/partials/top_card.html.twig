<div class="d-flex flex-wrap justify-content-between ">
    <div class="imageCard">
        <img src="{{ game.thumbnailCover }}">
    </div>

    <div class="glassCard d-flex flex-column align-items-center">
        <h2>{{ game.name }}</h2>
        <p>Disponible en :</p>
        <div class="d-flex">
            {% for langage in game.countries %}
                <img src="{{ langage.urlFlag }}"
                     alt="drapeau {{ langage.slug }}"
                     title="{{ langage.nationality }}"
                     class="me-1"
                >
            {% endfor %}
        </div>

        <div class="price d-flex align-items-baseline">
            <p class="realPrice">{{ game.price }}â‚¬</p>
        </div>
        <div class="card_buy">
            <input  type="number"
                    min="1"
                    value="1"
                    class="form-control"
                    data-input-add-game="{{ game.id }}"
            >
            <button class="btn my-2"
                    data-game-id="{{ game.id }}"
            >
                Acheter
            </button>
        </div>
        <div class="card_buy">
            <button class="btn"
                    data-game-favorite-id="{{ game.id }}"
            >
                <i class="fa fa-star"></i>
                Favoris
            </button>
        </div>
    </div>
</div>